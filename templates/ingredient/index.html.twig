{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Ingredients
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Mes ingredients</h1>
        <small class="text-muted">Total ingrédient: {% if ingredients is defined and ingredients|length >0 %}{{ingredients.getTotalItemCOunt}}{% else %}0{% endif %}</small>
        <br>
        <a href="{{path('ingredient.new')}}" class="btn btn-success">➕ Ajouter</a>
		{% if ingredients is defined %}
        <table class="table table-hover mt-4">
            <thead>
                <tr>
                    <th scope="col">Numéro</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prix (€)</th>
                    <th scope="col">Créé le</th>
                </tr>
            </thead>
            <tbody>
			{% for ingredient in ingredients %}
                <tr class="table-primary">
                    <th scope="row">{{ingredient.id}}</th>
                    <td>{{ingredient.name|upper}}</td>
                    <td>{{ingredient.price|number_format(2,'.',',')}}</td>
                    <td>{{ingredient.createdAt|date('d/m/Y')}}</td>
                </tr>
            {% endfor %}
        </tbody>
        </table>
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(ingredients)}}
        </div>
		{% endif %}
	</div>
{% endblock %}
