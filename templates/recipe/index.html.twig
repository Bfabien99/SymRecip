{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Recettes
{% endblock %}

{% block body %}
	<div
		class="container mt-4">
		{# affiche un message flash #}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fade show my-4" role="alert">
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				<strong>{{ message }}</strong>
			</div>

			<script>
				var alertList = document.querySelectorAll('.alert');
alertList.forEach(function (alert) {
new bootstrap.Alert(alert)
})
			</script>

		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-warning alert-dismissible fade show my-4" role="alert">
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				<strong>{{ message }}</strong>
			</div>

			<script>
				var alertList = document.querySelectorAll('.alert');
alertList.forEach(function (alert) {
new bootstrap.Alert(alert)
})
			</script>

		{% endfor %}
		<h1>Mes recettes</h1>
		<small class="text-muted">Total ingr√©dient:
			{% if recipes is defined and recipes|length >0 %}
				{{recipes.getTotalItemCOunt}}{% else %}0
			{% endif %}
		</small>
		<br>
		<a href="{{path('recipe.new')}}" class="btn btn-info">‚ûï Ajouter une recette</a>
		<br>
		{% if recipes is defined %}
			<table class="table table-hover mt-4">
				<thead>
					<tr>
						<th scope="col">Num√©ro</th>
						<th scope="col">Nom</th>
						<th scope="col">Prix (‚Ç¨)</th>
						<th scope="col">Cr√©√© le</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for recipe in recipes %}
						<tr class="table-info">
							<th scope="row">{{recipe.id}}</th>
							<td>{{recipe.name|upper}}</td>
							<td>{{recipe.price|number_format(2,'.',',')}}</td>
							<td>{{recipe.createdAt|date('d/m/Y')}}</td>
							<td>
								<a href="{{path('recipe.edit',{'id':recipe.id})}}" class="btn btn-info btn-sm">üìù Modi</a>
								<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modal{{recipe.id}}">‚ôªÔ∏è Supp</button>
							</td>
						</tr>
						<!-- Modal -->
						<div class="modal fade" id="modal{{recipe.id}}" tabindex="-1" role="dialog" aria-labelledby="modalTitle{{recipe.id}}" aria-hidden="true">
							<div class="modal-dialog" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="modalTitle{{recipe.id}}">SUPPRESSION !</h5>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										<div class="container-fluid">
											Voulez-vous vraiment supprimer la recette
											<strong>{{recipe.name}}</strong>
											?
										</div>
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
										<a href="{{path('recipe.delete',{'id':recipe.id})}}" class="btn btn-danger">Supprimer</a>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</tbody>
			</table>

			<script>
				var modalId = document.getElementById('modalId');

modalId.addEventListener('show.bs.modal', function (event) { // Button that triggered the modal
let button = event.relatedTarget;
// Extract info from data-bs-* attributes
let recipient = button.getAttribute('data-bs-whatever');

// Use above variables to manipulate the DOM
});
			</script>

			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(recipes)}}
			</div>
		{% endif %}
	</div>
{% endblock %}
